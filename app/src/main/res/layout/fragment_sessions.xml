<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Video Call Container -->
    <FrameLayout
        android:id="@+id/videoContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomControlBar"
        android:background="@color/dark_gray">

        <!-- Placeholder when no call is active -->
        <LinearLayout
            android:id="@+id/placeholderLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_videocam"
                android:alpha="0.7"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="No active call"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:alpha="0.7" />

            <TextView
                android:id="@+id/tvSessionCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Session Code: -"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:alpha="0.7" />
        </LinearLayout>

        <!-- Call status bar -->
        <LinearLayout
            android:id="@+id/callStatusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80000000"
            android:orientation="horizontal"
            android:padding="12dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvCallStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvRecordingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REC"
                android:textColor="@color/red"
                android:textSize="14sp"
                android:background="@drawable/recording_badge"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>

    <!-- Bottom Control Bar -->
    <LinearLayout
        android:id="@+id/bottomControlBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#CC1A1A1A"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        android:paddingHorizontal="24dp">

        <!-- Mic Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnMic"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/meet_control_button_bg"
                android:src="@drawable/ic_mic_on"
                app:tint="@color/white"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Mic"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Camera Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnCamera"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/meet_control_button_bg"
                android:src="@drawable/ic_camera_on"
                app:tint="@color/white"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Camera"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Screen Share Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnScreenShare"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/meet_control_button_bg"
                android:src="@drawable/ic_screen_share"
                app:tint="@color/white"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Share"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Record Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnRecord"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/meet_control_button_bg"
                android:src="@drawable/ic_record"
                app:tint="@color/white"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Record"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- End Call Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnEndCall"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/meet_end_call_button_bg"
                android:src="@drawable/ic_call_end"
                app:tint="@color/white"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="End"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>