<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Current Session Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Session"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardActiveSession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvSessionCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Session Code: -"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvConnectionStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: Not connected"
                android:textSize="14sp"
                android:textColor="@color/red"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnStartVideoCall"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Video Call"
                    android:drawableStart="@drawable/ic_video"
                    android:drawableTint="@color/white"
                    android:backgroundTint="@color/primary_color"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnStartAudioCall"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Audio Call"
                    android:drawableStart="@drawable/ic_audio"
                    android:drawableTint="@color/white"
                    android:backgroundTint="@color/primary_color"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnScreenShare"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Share Screen"
                    android:drawableStart="@drawable/ic_screen_share"
                    android:drawableTint="@color/white"
                    android:backgroundTint="@color/green"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnRecordSession"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Record"
                    android:drawableStart="@drawable/ic_record"
                    android:drawableTint="@color/white"
                    android:backgroundTint="@color/red"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:visibility="gone"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnEndSession"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:text="End Session"
                android:backgroundTint="@color/red"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:visibility="gone"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- No Active Session Message -->
    <TextView
        android:id="@+id/tvNoActiveSession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No active session. Create or join a session from the Home tab."
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="visible"/>

    <!-- Session History Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Session History"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSessionHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvNoHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No session history yet."
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="visible"/>

</LinearLayout>