<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background -->
    <gradient
        android:angle="45"
        android:startColor="@color/primary_color"
        android:centerColor="@color/blue"
        android:endColor="@color/red_orange"
        android:type="linear" />

    <!-- Optional rounded corners for smooth header -->
    <corners android:radius="12dp" />

    <!-- Optional padding if used for card-like headers -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>
