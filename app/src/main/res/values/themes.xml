<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Theme (Light Mode Only) -->
    <style name="Base.Theme.TusomeApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Force colors to prevent dark mode -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- App Theme -->
    <style name="Theme.TusomeApp" parent="Base.Theme.TusomeApp" />

    <!-- Curved TextInputLayout (For Login & Signup fields) -->
    <style name="CurvedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <!-- Alternative AppTheme (legacy support) -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <!-- Meet Control Button -->
    <style name="MeetControlButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/meet_control_button_bg</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:tint">@color/white</item>
    </style>

    <!-- Meet End Call Button -->
    <style name="MeetEndCallButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/meet_end_call_button_bg</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:tint">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

</resources>
