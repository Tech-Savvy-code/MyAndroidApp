<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ✅ Base Theme -->
    <style name="Base.Theme.TusomeApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Brand colors -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/primary_color</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background and surfaces -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="android:navigationBarColor">@color/primary_color</item>

        <!-- Toolbar text and icon color -->
        <item name="actionBarTheme">@style/ToolbarOverlay</item>

        <!-- Disable dark mode -->
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- ✅ Main Theme -->
    <style name="Theme.TusomeApp" parent="Base.Theme.TusomeApp" />

    <!-- ✅ Toolbar Overlay (ensures white icons/text) -->
    <style name="ToolbarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <!-- ✅ Curved TextInputLayout (used in login/signup) -->
    <style name="CurvedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <!-- ✅ Fallback legacy support -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <!-- ✅ Meet Control Buttons -->
    <style name="MeetControlButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/meet_control_button_bg</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="MeetEndCallButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/meet_end_call_button_bg</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:tint">@color/white</item>
    </style>

</resources>
