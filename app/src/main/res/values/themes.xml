<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Theme (Light Mode Only) -->
    <style name="Base.Theme.TusomeApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Force colors if needed -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- App Theme -->
    <style name="Theme.TusomeApp" parent="Base.Theme.TusomeApp" />

    <!-- Rounded TextInputLayout -->
    <style name="RoundedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.RoundedCorners</item>
    </style>

    <!-- Shape appearance with rounded corners -->
    <style name="ShapeAppearanceOverlay.RoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Alternative AppTheme (legacy support) -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <!-- Meet Control Button -->
    <style name="MeetControlButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/meet_control_button_bg</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:tint">@color/white</item>
    </style>

    <!-- Meet End Call Button -->
    <style name="MeetEndCallButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/meet_end_call_button_bg</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:tint">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

</resources>
